{
	"apps": [
		{
			"name": "API-Worker",
			"script": "Worker.js",
			"env_dev": {
				"NODE_TLS_REJECT_UNAUTHORIZED": 0
			},
			"watch": true,
			"restart_delay": 5000,
            "max_memory_restart": "500M",
			"exec_mode": "cluster",
			"instances": 6
		},
        {
			"name": "API-Worker-GC",
			"script": "GC.js",
			"watch": true,
			"restart_delay": 5000,
			"exec_mode": "fork"
		},
        {
			"name": "API-Queue-Master",
			"script": "qMaster.js",
			"watch": true,
			"restart_delay": 5000,
			"exec_mode": "fork"
		},
        {
			"name": "API-Fulltext",
			"script": "fulltext.js",
			"watch": false,
			"restart_delay": 5000,
			"exec_mode": "fork"
		}
	]
}
